{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Brewery",
  "type": "object",
  "required": ["id", "name", "brewery_type"],
  "additionalProperties": true,
  "properties": {
    "id":            { "type": "string" },
    "name":          { "type": "string" },
    "brewery_type":  { "type": "string" },

    "address_1":     { "type": ["string", "null"] },
    "address_2":     { "type": ["string", "null"] },
    "address_3":     { "type": ["string", "null"] },

    "city":          { "type": ["string", "null"] },
    "state_province":{ "type": ["string", "null"] },
    "postal_code":   { "type": ["string", "null"] },
    "country":       { "type": ["string", "null"] },
    "longitude":     { "type": ["number", "string", "null"] },
    "latitude":      { "type": ["number", "string", "null"] },
    "phone":         { "type": ["string", "null"] },
    "website_url":   { "type": ["string", "null"] },
    "state":         { "type": ["string", "null"] },
    "street":        { "type": ["string", "null"] }
  }
}